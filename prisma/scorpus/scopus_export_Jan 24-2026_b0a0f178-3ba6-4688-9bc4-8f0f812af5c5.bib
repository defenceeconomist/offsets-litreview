@ARTICLE{Fiott2017398,
	author = {Fiott, Daniel},
	title = {The EU, NATO and the European defence market: do institutional responses to defence globalisation matter?},
	year = {2017},
	journal = {European Security},
	volume = {26},
	number = {3},
	pages = {398 - 414},
	doi = {10.1080/09662839.2017.1352582},
